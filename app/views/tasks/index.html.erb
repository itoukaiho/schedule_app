<%= render "shared/partial" %>

<h3>予定一覧</h3>

<% if flash[:notice] %>
    <p class="notice"><%= flash[:notice] %></p>
    <% end %>

<table>
  <thead>
    <tr>
      <th>id</th>
      <th>タイトル</th>
      <th>開始日</th>
      <th>終了日</th>
      <th>終日
    
      </th>
      <th>更新日時</th>
      <th>詳細</th>
      <th>編集</th>
      <th>削除</th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.id %></td>
        <td><%= task.title %></td>
        <td><%= task.start_date%></td>
        <td><%= task.end_date %></td>
        <td><%= task.is_all_day ? "○" : "" %></td>
        <td><%= task.updated_at %></td>
        <td><%= link_to"詳細",task%></td>
        <td><%= link_to "編集", [:edit,task] %></td>
        <td><%= button_to "削除", task,:method => :delete, data: { confirm: "本当に削除しますか？"} %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p><%= link_to "予定の新規登録", :new_task %></p>
<p>予定の合計数: <%= @total_tasks %></p>
<p>本日の日付: <%= @today_date.strftime("%Y/%m/%d") %></p>
